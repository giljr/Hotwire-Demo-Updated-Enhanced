<turbo-frame id="new_room" target="_top">  
  <%= form_with(model: room) do |form| %>
    <% if room.errors.any? %>
      <div style="color: red; margin-bottom: 10px; font-size: 0.8em;">
        <% room.errors.each do |error| %>
          <%= error.full_message %>
        <% end %>
      </div>
    <% end %>

    <div style="display: inline-block; margin-right: 10px; ">
      <%= form.label :name, style: "display: inline-block; margin-right: 10px;" %>
      <%= form.text_field :name, style: "display: inline-block;" %>
    </div>

    <div style="display: inline-block;">
      <%= form.submit(style: "display: inline-block;") %>
    </div>
  <% end %>
</turbo-frame>
